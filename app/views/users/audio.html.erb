<%= render 'shared/banner' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12">

      <%= render 'shared/tabs' %>
      <div class="jumbotron">
        <div class="container">
          <h4>Share your recordings with the world!</h4>


            <%= form_for [@user, @audio] do |f| %>
              <%= render 'shared/errors', object: @audio %>


                <div class="input-group mb-3">
                  <%= f.text_field :link, class: 'form-control', required: true, placeholder: "Soundcloud link" %>
                  <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Add!</button>
                  </div>
                </div>
            <% end %>

        </div>
      </div>
      <div class="audio-feed d-flex flex-column">
        <h5 class="mb-2 text-center" style="text-transform: uppercase;"><%= @user.first_name %>'s recordings</h5>
        <% @audios.each do |audio| %>
          <div class="align-self-center">
            <iframe width="100%" height="152" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= audio.uid %>&color=%23fa404a&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=true&visual=false"></iframe>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

